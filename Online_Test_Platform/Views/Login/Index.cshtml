@model Online_Test_Platform.Models.UserInfo

@{
    ViewData["Title"] = "Login";
}

 <div class="center">
     <div class="form-group">
     <a class="btn btn-primary" asp-area="" asp-controller="Login" asp-action="Create">Registration</a>
     </div>
     </div>


<div class="center">
<h4>@ViewBag.Message</h4>
</div>
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
              <p class="text-white-50 mb-5">Please enter your login and password!</p>

              <form asp-action="Index">
              <div class="form-outline form-white mb-4">
              <div class="form-group">
                <input asp-for="EmailId" placeholder="Email" class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>       
              </div>

              <div class="form-outline form-white mb-4">
              <div class="form-group">
                <input asp-for="UserPassword" placeholder="Password" class="form-control" type="Password"/>
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>      
              </div>

              <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-light btn-lg px-5" />
            </div>
             </form>
             

              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>


 <style>
        body {
            background-image:
            url("/Image/Online exam login.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
        }
    </style>    

  
     <style>
.center {
 justify-content: center;
}
</style>
